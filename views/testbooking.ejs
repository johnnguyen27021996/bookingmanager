<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" rel="stylesheet" />
    <title>Book A Tour</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="text-center">Book A Tour</h1>
                <form action="/booking/..." method="POST">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tour" class="text-danger">Select Tour</label>
                                <select name="tour" id="tour" class="form-control">
                                    <option value="">Select A Tour</option>
                                    <% tours.forEach(item=>{ %>
                                    <option value="<%= item._id %>"><%= item.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="adult" class="text-success">Quantity Adult</label>
                                <input type="text" name="adult" id="adult" class="form-control"
                                    placeholder="Enter quantity adult ..." value="1">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="children" class="text-success">Quantity Children</label>
                                <input type="text" name="children" id="children" class="form-control"" placeholder="
                                    Enter quantity children ..." value="1">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="service" class="text-danger">Select Service</label>
                                <select name="service" id="service" class="form-control service" multiple>
                                    <% services.forEach(item=>{ %>
                                    <option value="<%= item._id %>"><%= item.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="bookat" class="text-danger">Select Time Of Tour</label>
                                <input type="date" name="bookat" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="amount" class="text-dager">Amount</label>
                                <input type="text" name="amount" id="amount" class="form-control"
                                    placeholder="Amount ...">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="note">Add A Note</label>
                                <textarea name="note" class="form-control" placeholder="Add a note"></textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger">Book Now</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.service').select2();

            // Amount
            ///////////////
            // CHANGE TOUR
            $('#tour').change(function () {
                // get data of tour: tourID, quantity adult, quantity chirldren, service
                var tourID = $(this).val(),
                    adult = $('#adult').val(),
                    children = $('#children').val(),
                    service = $('#service').val();
                // if tourID != ""
                if (tourID != '') {
                    // if have service attach
                    if (service != '') {
                        $.ajax({
                            type: "POST",
                            url: "/booking/amountservice",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children,
                                service: service
                            },
                            success: function (data) {
                                $('#amount').val(data);
                            }
                        })
                        // if not have service attach
                    } else {
                        $.ajax({
                            type: "POST",
                            url: "/booking/amounttour",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children
                            },
                            success: function (data) {
                                $('#amount').val(data);
                            }
                        })
                    }
                    // if tourId = "" set amount = 0
                } else {
                    $('#amount').val('');
                }
            })
            // CHANGE TOUR
            //////////////

            ///////////////
            // CHANGE ADULT
            $('#adult').change(function () {
                var tourID = $('#tour').val(),
                    adult = $(this).val(),
                    children = $('#children').val(),
                    service = $('#service').val();
                if (tourID != '') {
                    if (service != '') {
                        $.ajax({
                            type: "POST",
                            url: "/booking/amountservice",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children,
                                service: service
                            },
                            success: function (data) {
                                $('#amount').val(data);
                            }
                        })
                    } else {
                        $.ajax({
                            type: "POST",
                            url: "/booking/amounttour",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children
                            },
                            success: function (data) {
                                $('#amount').val(data);
                            }
                        })
                    }

                }
            })
            // CHANGE ADULT
            ////////////////

            ///////////////////
            // CHANGE CHILDREN
            $('#children').change(function(){
                var tourID = $('#tour').val(),
                    adult = $('#adult').val(),
                    children = $(this).val(),
                    service = $('#service').val();
                if(tourID != ''){
                    if(service != ''){
                        $.ajax({
                            type: "POST",
                            url: "/booking/amountservice",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children,
                                service: service
                            },
                            success: function(data){
                                $('#amount').val(data);
                            }
                        })
                    }else{
                        $.ajax({
                            type: "POST",
                            url: "/booking/amounttour",
                            data: {
                                id: tourID,
                                adult: adult,
                                children: children
                            },
                            success: function(data){
                                $('#amount').val(data);
                            }
                        })
                    }
                }
            })
            // CHANGE CHILDREN
            //////////////////

            //////////////////
            // CHANGE SERVICE
            $('#service').change(function () {
                var tourID = $('#tour').val(),
                    adult = $('#adult').val(),
                    children = $('#children').val(),
                    service = $(this).val();
                // if have service attach
                if (service != '') {
                    $.ajax({
                        type: "POST",
                        url: "/booking/amountservice",
                        data: {
                            id: tourID,
                            adult: adult,
                            children: children,
                            service: service
                        },
                        success: function (data) {
                            $('#amount').val(data);
                        }
                    })
                    // if not have service attach
                } else {
                    $.ajax({
                        type: "POST",
                        url: "/booking/amounttour",
                        data: {
                            id: tourID,
                            adult: adult,
                            children: children
                        },
                        success: function (data) {
                            $('#amount').val(data);
                        }
                    })
                }
            })
            // CHANGE SERVICE
            /////////////////
        })
    </script>

</body>

</html>