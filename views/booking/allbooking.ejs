<style>
    .fa-edit,
    .fa-trash-alt,
    .fa-eye {
        display: inline-block;
        cursor: pointer;
    }

    .fa-trash-alt,
    .fa-eye {
        margin-left: 7px;
    }

    .btn-label {
        display: inline-block;
        padding: 10px 0px;
        border-radius: 3px 0 0 3px;
    }

    .btn-labeled {
        padding-top: 0;
        padding-bottom: 0;
    }

    .btn {
        margin-bottom: 10px;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> All Tour</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Tour Name
                                    </th>
                                    <th>
                                        Guest Name
                                    </th>
                                    <th class="text-center">
                                        Price
                                    </th>
                                    <th class="text-center">
                                        Total People
                                    </th>
                                    <th class="text-center">
                                        Book At
                                    </th>
                                    <th class="text-center">
                                        Status
                                    </th>
                                    <th class="text-center">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% books.forEach(item=>{ %>
                                <tr>
                                    <td>
                                        <%= item.tourID.name %>
                                    </td>
                                    <td>
                                        <span><%= item.guestID.firstname %> <%= item.guestID.lastname %></span>
                                    </td>
                                    <td class="text-center">
                                       <%= item.amount %>
                                    </td>
                                    <td class="text-center">
                                        <%= item.people %>
                                    </td>
                                    <td class="text-center">
                                       <%= item.bookAt %>
                                    </td>
                                    <td class="text-center">
                                        
                                    </td>
                                    <td class="text-center">
                                        <a href="/booking/edit/<%= item._id %>"><i class="fas fa-edit"
                                                style="color: #e74c3c"></i></a>
                                        <a href="/booking/delete/<%= item._id %>"><i class="fas fa-trash-alt"
                                                style="color: #bdc3c7"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <ul class="pagination-hanler">
                        <li class="pageitem"><a class="pagelink" disabled=""><i
                                    class="fas fa-angle-double-left"></i></a></li>
                        <% for(let i=0; i<pagination; i++){ %>
                        <li class="pageitem"><a class="pagelink" href="/booking/p=<%= i %>"><%= i+1 %></a></li>
                        <% } %>
                        <li class="pageitem"><a class="pagelink" disabled=""><i
                                    class="fas fa-angle-double-right"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>