<div class="content">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Edit Service</h5>
                    </div>
                    <div class="card-body">
                        <form action="/service/edit/<%= service._id %>" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-5 pr-md-1">
                                    <div class="form-group">
                                        <label>Service Name</label>
                                        <input type="text" name="name" class="form-control" disabled="" placeholder="<%= service.name %>">
                                    </div>
                                </div>
                                <div class="col-md-3 px-md-1">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="text" class="form-control" name="price"
                                            placeholder="<%= service.price %>">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div>
                                        <label>Status</label>
                                        <select name="status" class="isactive form-control">
                                            <option value="">Select Status</option>
                                            <option value="true" <% if(service.status == true){ %> selected <% } %>>Public</option>
                                            <option value="false" <% if(service.status == false){ %> selected <% } %>>Private</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!----------------------------------------->
                            <div class="row">
                                <div class="col-md-4">
                                    <div>
                                        <label>Thumbnail</label>
                                        <input type="file" name="thumbnail" class="form-control"
                                            style="padding: 0 !important;">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div>
                                        <label>Currency</label>
                                        <select name="currency" class="isactive form-control">
                                            <option value="">Select Currency</option>
                                            <option value="USD" <% if(service.currency == 'USD'){ %> selected <% } %>>USD
                                            </option>
                                            <option value="VND" <% if(service.currency == 'VND'){ %> selected <% } %>>Viet Nam
                                                Dong</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>About service</label>
                                        <textarea rows="4" cols="80" class="form-control" name="description"
                                            placeholder="Here can be service's description"><%= service.description %></textarea>
                                    </div>
                                </div>
                            </div>
                            <!----------------------------------------->
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-fill btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>